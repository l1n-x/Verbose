# -*- coding: utf-8 -*-
#:import MDFillRoundFlatButton kivymd.button.MDFillRoundFlatButton
#:import MDTextField kivymd.textfields.MDTextField

<Registration>:
    name: 'registration'      

    BoxLayout:
        orientation: 'vertical'
        padding: dp(1), dp(10)
        ScrollView:
            BoxLayout:
                orientation:'vertical'
                size_hint_y:None
                height: self.minimum_height
                MDTextField:
                    id: first_name
                    hint_text: 'Имя'
                    required: True
                    multiline: False
                    write_tab: False
                MDTextField:
                    id: last_name
                    hint_text: 'Фамилия'
                    required: True
                    multiline: False
                    write_tab: False
                MDTextField:
                    id: born
                    hint_text: 'Дата рождения (29.06.2019)'
                    required: True
                    multiline: False
                    write_tab: False
                MDTextField:
                    id: country
                    hint_text: 'Страна'
                    required: True
                    multiline: False
                    write_tab: False
                MDTextField:
                    id: city
                    hint_text: 'Город'
                    icon_right: 'phone'
                    icon_type: 'right'
                    max_text_lenght: 12
                    required: True
                    multiline: False
                    write_tab: False
                MDTextField:
                    id: tel
                    hint_text: 'Телефон'
                    icon_right: 'phone'
                    icon_type: 'right'
                    required: True
                    multiline: False
                    write_tab: False
                MDTextField:
                    id: password
                    hint_text: 'Пароль'
                    min_text_lenght: 6
                    required: True
                    multiline: False
                    write_tab: False
                MDTextField:
                    id: about
                    hint_text: 'О себе'
                    required: True
                    multiline: True
                    write_tab: False
                MDLabel:
                    id:error_data
                    text:''
                    font_size: '14sp'
                    opacity:0 if self.text == '' else 1
                    theme_text_color: 'Error'
                    italic: True
                    size:self.size
                GridLayout:
                    cols:3
                    size_hint_y: None
                    height: self.minimum_height
                    padding: dp(15)
                    Widget:
                    MDFillRoundFlatButton:
                        id:reg
                        text: 'Зарегистрироваться'
                        on_press:
                            root.ids.error_data.text = ''
                            app.registration(first_name.text,last_name.text,born.text,country.text,city.text,tel.text,password.text,about.text)
                        canvas.before:
                            Color:
                                rgba: app.theme_cls.primary_color
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: 17, 17, 17, 17
                    Widget:
