# -*- coding: utf-8 -*-
#:import Window kivy.core.window.Window
#:import RGBA kivy.utils.rgba

<Message@FloatLayout>:
    message_id: -1
    bg_color: '#808080'
    side: 'left'
    text: ''
    size_hint_y: None
    _size: 0, 0
    Label:
        text: root.text
        font_size:'18sp'
        color: 1,1,1,1
        padding: dp(10),dp(10)
        size_hint: None, None
        size: root._size
        on_texture_size:
            message = dict(app.messages[root.message_id])
            message['_size'] = self.texture_size
            app.messages[root.message_id] = message
        pos_hint:({'x': 0.01, 'center_y': .5} if root.side == 'left' else {'right': .99, 'center_y': .5})
        canvas.before:
            Color:
                rgba: RGBA(root.bg_color)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: 17, 17, 17, 17

<Corresp>:
    name: 'corresp'
    BoxLayout:
        orientation:'vertical'
        padding: 0,dp(10),0,0               
        RecycleView:
            id:msg_store
            data:app.messages
            viewclass: 'Message'
            do_scroll_x: False
            RecycleBoxLayout:
                id:rbox
                orientation:'vertical'
                size_hint: 1, None
                size: self.minimum_size
                default_size_hint: 1, None
                key_size:'_size'
        FloatLayout:
            size_hint_y: None
            height: 0
            MDFillRoundFlatButton:               
                size_hint: 1, None
                opacity: 0 if not self.text != '' else .8
                text: 'В конец истории' if msg_store.height < rbox.height and msg_store.scroll_y > 0 else ''
                theme_text_color: 'Primary'
                pos_hint: {"center_x":.5,"y":0}
                on_press: app.scroll_bottom()

	    BoxLayout:
	        size_hint: 1, None
        	height: self.minimum_height       	
	        size: self.minimum_size                       
	        MDTextField:
	            id:msg
	            size_hint: 1, None
	            font_size: "18sp"
                hint_text: 'Ваше сообщение'
                multiline: True
	            # on_text_validate: 
	            #     app.send_message(msg.text),
                #     msg.focus = True,
	            #     msg.text = ''

	        MDIconButton:
	            icon: 'send'
	            theme_text_color: 'Custom'
	            text_color: app.theme_cls.primary_color       
	            on_press:
	                app.send_message(msg.text)
                    msg.text = ''