# -*- coding: ut-8 -*-
#:import MDList kivymd.list.MDList
#:import MDLabel kivymd.label.MDLabel
#:import OneLineAvatarIconListItem kivymd.list.OneLineAvatarIconListItem

<DialogsItem@OneLineAvatarIconListItem>:
    MyAvatar:
        source: 'data/images/none_avatar.png'

<Dialogs>:
    name: 'dialogs'

    BoxLayout:
        orientation: 'vertical'

        ScrollView:
            MDList:
                id: scroll
                
                DialogsItem:
                    text: 'Удаленный пользователь'
                    on_press: app.show_corresp(self.text)

        BoxLayout:
            height: self.minimum_height
            pos_hint: {'center_x': .5}
            size_hint: (None, None)
            size: self.minimum_size
            top: self.height
            spacing: (dp(20), 0)
            padding: [0, 0, 0, 5]
            MDIconButton:
                icon:'account'
                theme_text_color: 'Custom'
                text_color: app.theme_cls.primary_color
                on_release: app.show_profile()
            MDIconButton:
                icon:'message'
                theme_text_color: 'Primary'
            MDIconButton:
                icon:'settings'
                theme_text_color: 'Custom'
                text_color: app.theme_cls.primary_color
                on_release: app.show_settings()
            MDIconButton:
                icon:'book'
                theme_text_color: 'Custom'
                text_color: app.theme_cls.primary_color
                on_release: app.show_license()
            MDIconButton:
                icon:'information'
                theme_text_color: 'Custom'
                text_color: app.theme_cls.primary_color
                on_release: app.show_about()
