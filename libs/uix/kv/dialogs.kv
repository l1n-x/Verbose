# -*- coding: utf-8 -*-
#:import MDList kivymd.list.MDList
#:import MDLabel kivymd.label.MDLabel
#:import OneLineAvatarIconListItem kivymd.list.OneLineAvatarIconListItem
#:import MDFloatingActionButton kivymd.button.MDFloatingActionButton

<DialogsItem@OneLineAvatarIconListItem>:
    MyAvatar:
        source: 'data/images/none_avatar.png'

<Dialogs>:
    name: 'dialogs'

    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            MDList:
                id: scroll
                DialogsItem:
                    text: 'Леся Конева([i][u][color=#FF0000]Of[/color][/i][/u])'
                    font_size: '18sp'
                    markup: True
                    on_press: app.show_corresp('Леся Конева') 
                DialogsItem:
                    text: 'Ангелина Брагина([i][u][color=#00FF00]On[/color][/i][/u])'
                    font_size: '18sp'
                    markup: True
                    on_press: app.show_corresp('Ангелина Брагина')
                DialogsItem:
                    text: 'Олег Ануфриев([i][u][color=#FF0000]Of[/color][/i][/u])'
                    font_size: '18sp'
                    markup: True
                    on_press: app.show_corresp('Олег Ануфриев')  
                DialogsItem:
                    text: 'Владислав Казанцев([i][u][color=#00FF00]On[/color][/i][/u])'
                    font_size: '18sp'
                    markup: True
                    on_press: app.show_corresp('Владислав Казанцев')

        BoxLayout:
            height: self.minimum_height
            pos_hint: {'center_x': .5}
            size_hint: (None, None)
            size: self.minimum_size
            top: self.height
            spacing: (dp(20), 0)
            padding: [0, 0, 0, 5]
            MDIconButton:
                icon:'account'
                theme_text_color: 'Custom'
                text_color: app.theme_cls.primary_color
                on_release: app.show_profile()
            MDIconButton:
                icon:'message'
                theme_text_color: 'Primary'
            MDIconButton:
                icon:'settings'
                theme_text_color: 'Custom'
                text_color: app.theme_cls.primary_color
                on_release: app.show_settings()
            MDIconButton:
                icon:'book'
                theme_text_color: 'Custom'
                text_color: app.theme_cls.primary_color
                on_release: app.show_license()
            MDIconButton:
                icon:'information'
                theme_text_color: 'Custom'
                text_color: app.theme_cls.primary_color
                on_release: app.show_about()
